rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow data generation without authentication (for initial setup)
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow initial data seeding without authentication
    match /products/{productId} {
      allow read: if true; // Allow public read for frontend
      allow write: if request.auth == null || (request.auth != null && request.auth.token.admin == true);
    }
    
    match /users/{userId} {
      allow read: if true; // Allow public read for frontend
      allow write: if request.auth == null || (request.auth != null && request.auth.uid == userId);
    }
    
    match /orders/{orderId} {
      allow read: if true; // Allow public read for frontend
      allow write: if request.auth == null || (request.auth != null && request.auth.token.admin == true);
    }
    
    match /adminUsers/{adminUser} {
      allow read: if request.auth == null || request.auth != null;
      allow write: if request.auth == null || (request.auth != null && request.auth.token.admin == true);
    }

    // Carts are user-specific (keep original rules)
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
